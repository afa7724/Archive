{% extends 'layouts/base.html.twig' %}

{% block title 'Réinitialisez votre mot de passe' %}

{% block body %}
    <div class="row justify-content-center align-items-center vh-100">
        <div class="col-md-6 mx-auto">
            <h1 class="mb-3 text-center">Réinitialisez votre mot de passe</h1>

            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-danger mb-3 rounded" role="alert">{{ flashError| trans  }}</div>
            {% endfor %}

            <p class="text-center text-muted">
               Entrez votre adresse e-mail et nous vous enverrons
                un lien pour réinitialiser votre mot de passe.
            </p>

            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}

                <button type="submit" class="mt-4 btn btn-primary  btn-block">
                    Envoyer un e-mail de réinitialisation du mot de passe
                </button>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}
