{% extends "layouts/base.html.twig" %}

{% block title  %}
	{{ parent()}} | {{archive.title}} 
{% endblock %}
{% block body %}

	<div class="row">

		<div class="col-md-6 mx-auto">


			<div class="card bg-light mb-3 d-inline-block border-light rouded shadow ">
				<div class="card-header">
					<h4 class="card-title text-center">
						{{archive.title}}
					</h4>
				</div>

				<div class="card-body">
					
					<h6 class="card-subtitle mb-2 pt-2 text-success">Encadre par
						{{archive.encadreur | nl2br}}</h6>
					<p class="card-text text-muted mb-2 pb-3 text-dark">Promotion de 
						{{archive.datepromotionOn | date('Y')}}</p>
					<p class="card-text pl-3 pb-3">{{archive.description}}</p>
					<span class="mr-2 ml-4">
					<a href="{{path('app_archives_edit',{slug:archive.slug,id:archive.id})}}" class="card-link btn btn-success">Modifi√©</a>
					</span>
					<form method="post" action="{{path('app_archives_delete',{slug:archive.slug,id: archive.id })}}" style="display:inline-block" onsubmit="return confirm('Etes-vous vraiment sur ?')">
						<input type="hidden" name="_method" value="DELETE">
						<input type="hidden" name="_token" value="{{ csrf_token('delete'~ archive.id)}}">
						<span class="mr-2 ml-5">
						<button class="btn btn-danger card-link">Supprimer</button>
						</span>
					</form>
					<span class="ml-5">
					<a href="{{ asset('uploads/brochures/' ~ archive.rapportfilename) }}" class="card-link btn btn-primary">View brochure (PDF)</a>
					</span>

				</div>

				<div class="card-footer text-muted">
					<p>Modifie le
						{{archive.updatedAt|date('y-M-d H:i' )}}
					</p>
				</div>


			</div>
		</div>

	</div>


{% endblock %}
